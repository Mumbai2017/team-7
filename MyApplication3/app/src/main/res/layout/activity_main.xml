<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Choose Your Khakara Flavour"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nachani"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/nachani" />

            <ImageView
                android:id="@+id/khichadi"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/khichadi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nachaniName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:text="Nachani"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/khichadiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_weight="1"
                android:text="Khichadi"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/methi"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/methi" />

            <ImageView
                android:id="@+id/jeera"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/jeera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/methiName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="Methi"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:id="@+id/jeeraName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:text="Jeera"
                android:textColor="@android:color/holo_red_dark" />

        </LinearLayout>

        <Switch
            android:id="@+id/addDdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Delete/Add" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Enter Quantity"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:height="50dp"
            android:text="Submit" />

    </LinearLayout>

</LinearLayout>